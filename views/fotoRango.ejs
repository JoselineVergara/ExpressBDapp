<!DOCTYPE html>
<html>

<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f4f4f4;
        }
        .container {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 800px;
        }
    </style>
</head>

<body>
    <div class="container text-center">
        <h1 class="pb-4"><%= title %></h1>
        <form action="/fotos/findAllByRate/view" method="GET" class="mb-4">
            <div class="row justify-content-center">
                <div class="col-md-4">
                    <label for="lower">Calificación Desde</label>
                    <input type="number" step="0.01" class="form-control" id="lower" name="lower" value="<%= typeof lower !== 'undefined' ? lower : '' %>">
                </div>
                <div class="col-md-4">
                    <label for="higher">Hasta</label>
                    <input type="number" step="0.01" class="form-control" id="higher" name="higher" value="<%= typeof higher !== 'undefined' ? higher : '' %>">
                </div>
                <div class="col-md-4 align-self-end">
                    <button type="submit" class="btn btn-primary">Buscar</button>
                </div>
            </div>
        </form>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Título</th>
                    <th>Descripción</th>
                    <th>Ruta</th>
                    <th>Calificación</th>
                    <th>Fecha de creación</th>
                    <th>Etiqueta</th>
                </tr>
            </thead>
            <tbody>
                <% arrFotos.forEach((foto) => { %>
                    <tr>
                        <td><%= foto.id %></td>
                        <td><%= foto.titulo %></td>
                        <td><%= foto.descripcion %></td>
                        <td><%= foto.ruta %></td>
                        <td><%= foto.calificacion %></td>
                        <td><%= foto.createdAt.toLocaleDateString('en-US') %></td>
                        <td><%= foto.etiqueta.map(instancia => instancia.texto).join(", ") %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

    </div>
</body>

</html>
